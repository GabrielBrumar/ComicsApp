<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marvel.comicsapp.comicsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.marvel.comicsapp.application.ComicsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ComicsTheme">
        <activity android:name="com.marvel.comicsapp.screens.mainscreen.CharactersActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.marvel.comicsapp.screens.detailscreen.CharacterDetailsActivity"></activity>
    </application>

</manifest>